<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/productImageView_productItem"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        tools:ignore="ContentDescription,RtlHardcoded"
        android:src="@mipmap/ic_launcher_round"/>


    <TextView
        android:id="@+id/productNameTV_productItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/productName"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        tools:ignore="RelativeOverlap,RtlHardcoded" />

    <TextView
        android:id="@+id/productPriceTV_productItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:text="@string/productPrice"
        android:textSize="20sp"
        android:layout_below="@id/productNameTV_productItem"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/productCheapTV_productItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheap"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/productPriceTV_productItem"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"/>

    <CheckBox
        android:id="@+id/favoriteProductCB_productItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addToShoppingCard"
        android:layout_below="@id/productCheapTV_productItem"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"/>






</RelativeLayout>